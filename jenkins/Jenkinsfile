pipeline {
    agent any
    stages {
        stage('Greeting') {
            steps {
                sh 'Hello from Dev branch'
            }
        }
        stage('preparation') {
            steps {
                git 'https://github.com/MohamedAdelTaha/Simple_Flask_App.git'
            }
        }
        stage('Build') {
            steps {
                sh 'sudo docker build . -t mohamedadeltaha/ViewsCounterApp:v1.0'
            }
        }
        stage('artifact') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                    sh 'sudo docker login -u ${USERNAME} -p ${PASSWORD}'
                    sh 'sudo docker push mohamedadeltaha/ViewsCounterApp:v1.0'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo docker run -d -p 5005:5000 mohamedadeltaha/ViewsCounterApp:v1.0'
            }
        }
    }
}